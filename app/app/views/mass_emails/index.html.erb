
<% if can? :create, MassEmail %>
  <%= link_to (t 'mass_emails.create_new'), new_mass_email_path, class: 'btn btn-primary pull-right clearfix' %>
<% end %>

<h2 class="pull-left"><%= MassEmail.model_name.human(count:2) %></h2>

<table class="table">

  <thead>
    <tr>
      <th><%= t 'common.id' %></th>
      <th><%= t 'mass_emails.sent_at' %></th>
      <th><%= MassEmail.human_attribute_name :to %></th>
      <th><%= MassEmail.human_attribute_name :subject %></th>
      <th><%= MassEmail.human_attribute_name :body %></th>
      <th><%= t 'common.actions' %></th>
    </tr>
  </thead>

   <% @mass_emails.each do |me| %>
    <tr>
      <td><%= me.id %></td>
      <td><%= me.created_at.strftime("%B %d, %Y") %></td>
      <td><%= me.to %></td>
      <td><%= me.subject %></td>
      <td><%= truncate(me.body) %></td>
      <td><%= link_to (t 'common.show'), mass_email_path(me) %></td>
    </tr>
  <% end %>
</table>
