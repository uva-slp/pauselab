<style media="screen">
  .trumbowyg-box {
    margin-top: 0px;
  }
  label[for='proposal_artist_cv'] {
    display: block;
  }
  input[type='file'] {
  }
</style>

<%= simple_form_for @landingpage do |f| %>
<%= f.input :title, as: :select, collection: Landingpage.titles.keys,
  label_method: lambda {|t| Landingpage.human_enum_name :title, t },
  selected: if local_assigns[:title].nil? then @landingpage.title else title end %>
<%= f.input :description, placeholder: (t 'landingpages.description_placeholder') %>

<div class='form-group'>
  <%= f.button :submit, value: (t 'common.submit'), class: 'btn btn-primary' %>
  &nbsp;
  <%= link_to (t 'common.cancel'), landingpages_path, class: 'btn btn-secondary' %>
</div>

<% end %>

<script>

$('textarea').each(function() {
  $(this).trumbowyg({
      svgPath: '<%= image_path("icons.svg") %>',
      btns: [
          ['formatting'],
          ['insertImage'],
          'btnGrp-semantic',
          ['link'],
          'btnGrp-justify',
          'btnGrp-lists',
          ['horizontalRule'],
          ['fullscreen']
      ]
  }) ;
});

</script>
