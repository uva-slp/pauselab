
<%= render :layout => 'dashboard', :locals => { title: 'Users', position: 'users' } do %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.fullname %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Manage', show_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% end %>
