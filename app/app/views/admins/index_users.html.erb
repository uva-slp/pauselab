
<h1 class="page-header admin-title">Admin Console</h1>

<div class="list-group">
  <% @users.each do |user| %>
    <%= link_to user.email, user_info_path(user), class: 'list-group-item' %>
  <% end %>
</div>

<div class="container-fluid">
	<div class="row">

		<div class="col-sm-2 sidebar">
      <%= render 'side_bar' %>
		</div>

		<div class="col-sm-10 main">

			<h2 class="sub-header">Users</h2>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>name</th>
							<th>email</th>
							<th colspan="3">action</th>
						</tr>
					</thead>
					<tbody>

            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.fullname %></td>
                <td><%= user.email %></td>
                <td><%= link_to 'show', user_info_path(user) %></td>
                <td><%= link_to 'edit' %></td>
                <td><%= link_to 'delete' %></td>
              </tr>
            <% end %>

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
