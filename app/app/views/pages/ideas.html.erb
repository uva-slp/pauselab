</style>

<% content_for :masthead do %>
    <%= image_tag 'masthead/beCville.png', :alt => 'beCville', class: 'img-fluid' %>
    <br/>
<% end %>

<div>

  <h1 class="page-header text-lg-center"><%= t 'pages.idea_collection' %></h1>

  <%= render partial: 'show_landing_page', :locals => {:title => "ideas_home"} %>

  <%= link_to (t 'pages.submit_idea'), new_idea_path, class: 'btn btn-primary', id: 'new-idea-btn' %>

  <div id="map" class="ideas-map-info"></div>

</div>

<!-- Last 3 blogs: needs to be prettier -->
<br/>
<div>
