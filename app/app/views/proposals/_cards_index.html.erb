

<h1 class="page-title"><%= Proposal.model_name.human(count:2) %></h1>
<%= render 'sort_controls' %>
<br>
<br>

<div class="card-columns">
  <% @proposals.each do |p| %>
    <div class="card">
      <div class="card-block">

        <span class="share-btns pull-right">
          <button class="btn btn-sm btn-outline-primary fb-btns" data-link="proposals" data-desc="<%= p.title %>" data-id="<%= p.id %>">
            <i class="fa fa-facebook "></i>
          </button>
          <button class="btn btn-sm btn-outline-primary twtr-btns" data-link="proposals" data-desc="<%= p.title %>" data-id="<%= p.id %>">
            <i class="fa fa-twitter "></i>
          </button>
        </span>

        <h4 class="card-title">
          <%= link_to proposal_path(p) do %>
            <%= p.title %>
          <% end %>
        </h4>

        <h6 class="card-subtitle text-muted"><%= p.user.fullname %></h6>
        <p class="card-text"><%= truncate p.essay, length: 100 %></p>



      </div>

      <div class="card-footer text-muted ">
        <span class="pull-left">
          <%= number_to_currency p.proposal_budget.cost %>
        </span>
        <span class="pull-right">
          <%= p.created_at.strftime("%B %d") %>
        </span>
      </div>
    </div>
  <% end %>
</div>
