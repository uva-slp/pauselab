<%= simple_form_for @proposal do |f| %>

    <%= f.input :title, placeholder: 'Title (max. length 40)' %>
    <%= f.input :description, placeholder: 'Detail how the plan will be implemented' %>
    <%= f.input :essay, placeholder: "how would this project help the community" %>
    <%= f.input :website_link, placeholder: 'a link to an online portfolio' %>

    <br/>
    <h3>Budget Information</h3>

    <%= f.simple_fields_for :proposal_budget do |p| %>
    <div class="row">
      <div class="col-sm-4">
        <%= p.input :artist_fees, placeholder: 'artist fees budget' %>
      </div>
      <div class="col-sm-4">
        <%= p.input :project_materials, placeholder: 'project materials budget' %>
      </div>
      <div class="col-sm-4">
        <%= p.input :printing, placeholder: 'printing budget' %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <%= p.input :marketing, placeholder: 'marketing budget' %>
      </div>
      <div class="col-sm-4">
        <%= p.input :documentation, placeholder: 'documentation budget' %>
      </div>
      <div class="col-sm-4">
        <%= p.input :volunteers, placeholder: 'volunteer budget' %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <%= p.input :insurance, placeholder: 'insurance/legal budget' %>
      </div>
      <div class="col-sm-4">
        <%= p.input :events, placeholder: 'events budget' %>
      </div>
    </div>
    <% end %>

    <div class='form-group'>
      <%= f.input :artist_cv, label: "resume: ", wrapper_html: { class: 'btn-file' } %>
    </div>

    <div class='form-group'>
      <%= f.button :submit, value: 'Submit', class: 'btn btn-primary' %>
      &nbsp;
      <%= link_to 'Cancel', proposals_path, class: 'btn btn-secondary' %>
    </div>

<% end %>

<script>
