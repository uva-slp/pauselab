
<% content_for :masthead do %>
    <!-- <%= image_tag 'masthead/artist-med.jpg', :alt => 'beCville', class: 'img-responsive' %> -->
<% end %>

	<h1 class="page-header">Calling all artists</h1>

	<div class="grid">


	 <% for idea in @ideas %>
		 <div class="grid-item">
		 	<div class="panel panel-default grid-panel">
		 		<div class="panel-heading">
		 			<%= idea.category.name %>
		 		</div>
		 		<div class="panel-body">
		 			<%= idea.description %>
		 		</div>
		 		<div class="panel-footer">
		 			<span class="pull-left"><%= idea.likes %></span>
		 			<a class="btn btn-sm btn-default pull-right"><i class="glyphicon glyphicon-thumbs-up"></i></a>
		 			<div class="clearfix"></div>
		 		</div>
		 	</div>
		 </div>
	 <% end %>

	</div>
