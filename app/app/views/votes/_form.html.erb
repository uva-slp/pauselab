<style media="screen">

  .checkbox {
    display: block;
  }

  .check_boxes {
    margin-right: 10px;
  }

</style>

<%= form_for @vote, :url => { :action => "create" } do |vote| %>
  <%= vote.collection_check_boxes :proposal_ids, Proposal.all, :id, :description do |b| %>

    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= b.label %></h4>
        <div class="form-check">
          <%= b.label(class: "form-check-label") { b.check_box(class: "form-check-input right-10") + b.text} %>
          <!-- b.label(class: "my-#{ b.object.class.name.parameterize }", 'data-value': b.value) -->
        </div>
      </div>
    </div>

  <% end %>
  <%= vote.submit "Submit", class: 'btn btn-primary' %>
<% end %>

