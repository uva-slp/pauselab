<h2><%= t 'users.sessions.log_in' %></h2>

<%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>

  <%= f.input :email, placeholder: (t 'common.email_placeholder') %>
  <%= f.input :password %>

  <%= f.input_field :remember_me, as: 'boolean' %> <%= t 'users.sessions.remember_me' %>

  <div class="form-group">
    <%= f.button :submit, (t 'users.sessions.sign_in'), class: "btn-primary" %>
  </div>

  <div class="form-group">
      <%= render "users/shared/links" %>
  </div>

<% end %>

<script type="text/javascript">
  $("input[type=checkbox]").parent().click(function() {
    $(this).removeClass("btn-success");
  });
  $("input[type=checkbox]").parent().hover(function() {
    $(this).removeClass("btn-outline-primary");
  });
</script>
