


<h2>Log in</h2>

<%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>

  <%= f.input :email, placeholder: 'john.smith@company.com' %>
  <%= f.input :password, placeholder: 'password' %>

  <%= f.input_field :remember_me, as: 'boolean' %> remember me

  <div class="form-group">
    <%= f.button :submit, "Sign In", class: "btn-primary" %>
  </div>

  <div class="form-group">
      <%= render "users/shared/links" %>
  </div>

<% end %>

<script type="text/javascript">
  $("input[type=checkbox]").parent().click(function() {
    $(this).removeClass("btn-success");
  });
  $("input[type=checkbox]").parent().hover(function() {
    $(this).removeClass("btn-outline-primary");
  });
</script>
