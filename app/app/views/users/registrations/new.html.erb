    <h2>Sign up</h2>

    <%= flash[:recaptcha_error] %>
    <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= f.input :first_name, placeholder: 'clark' %>
        <%= f.input :last_name, placeholder: 'kent' %>
        <%= f.input :email, placeholder: 'ckent@dailyplanet.com' %>
        <%= f.input :password, placeholder: 'password', hint: "#{@minimum_password_length} characters minimum" %>
        <%= f.input :password_confirmation, placeholder: 'password confirmation' %>
        <%= f.input :phone, placeholder: '555-555-5555' %>

        <div class="form-group">
          <!-- <%= recaptcha_tags %> -->
          <%= f.button :submit, value: 'sign up', style: 'margin-top: 10px;' %>
        </div>

        <div class="form-group">
            <%= render "users/shared/links" %>
        </div>

    <% end %>



