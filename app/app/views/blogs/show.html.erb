<table>
  <tr>
    <td>
      <%= image_tag @blog.user.avatar.url(:thumb), class: 'user-img-lg img-fluid' %>
    </td>
    <td>
      <h2><b><%= @blog.title %></b></h2>
      <h5>
        <%= @blog.user.fullname %>
        <span class="text-muted"> â€¢ <%= @blog.created_at.strftime("%b %e") %></span>
      </h5>
    </td>
  </tr>
</table>

<p class="blog-body"><%= raw @blog.body %></p>

<br>

<div>
  <% if can? :edit, @blog %>
    <%= link_to edit_blog_path(@blog), class: "btn btn-sm btn-primary" do %>
      <i class="fa fa-pencil-square-o"></i>
    <% end %>
  <% end %>
  <% if can? :destroy, @blog %>
    <%= link_to blog_path(@blog), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: (t 'common.confirm_message')} do %>
      <i class="fa fa-trash"></i>
    <% end %>
  <% end %>
</div>

<hr>

<div class="row">
  <div class="col-md-10 col-centered">
    <%- disqus_thread %>
  </div>
</div>
