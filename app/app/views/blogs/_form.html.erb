
<%= simple_form_for @blog do |f| %>
    <%= f.input :title, placeholder: 'Christmas Update' %>
    <%= f.input :body, placeholder: 'After a month of hard work...' %>
    <div class='form-group'>
      <%= f.button :submit, value: 'Submit', class: 'btn-primary' %>
      <%= link_to 'Cancel', blogs_path %>
    </div>
<% end %>

<!-- Haven't tested it out yet but it should work --> 
<script>
$('textarea').each(function() {
  $(this).trumbowyg({
      svgPath: '<%= image_path("icons.svg") %>',
      btns: [
          ['formatting'],
          ['insertImage'],
          'btnGrp-justify',
          'btnGrp-lists',
          ['horizontalRule'],
          ['fullscreen']
      ]
  });
});
</script>
